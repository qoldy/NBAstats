<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nbastats">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NBAstats"
        android:usesCleartextTraffic="true">
        <activity android:name=".mvvm.views.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".mvvm.views.StandingsActivity"/>
        <activity android:name=".mvvm.views.TeamActivity" />
        <activity android:name=".mvvm.views.ScheduleActivity" />
        <activity android:name=".mvvm.views.PlayerActivity" />
    </application>

</manifest>