<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/position"
        android:layout_width="40dp"
        android:text="@string/pos_ex"
        style="@style/standardText"/>
    <View
        android:id="@+id/div1"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:layout_alignEnd="@id/position"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="3dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignStart="@id/div1"
        />
    <TextView
        android:id="@+id/team"
        android:layout_width="match_parent"
        android:text="@string/team_ex"
        android:layout_toEndOf="@id/logo"
        android:layout_alignEnd="@id/div2"
        style="@style/standardText"/>
    <View
        android:id="@id/div2"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:layout_alignStart="@id/wins"/>
    <TextView
        android:id="@+id/wins"
        android:layout_width="40dp"
        android:text="@string/w_ex"
        android:layout_alignEnd="@id/div3"
        style="@style/standardText"/>
    <View
        android:id="@id/div3"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:layout_alignStart="@id/loss"/>
    <TextView
        android:id="@+id/loss"
        android:layout_width="40dp"
        android:text="@string/l_ex"
        android:layout_alignEnd="@id/div4"
        style="@style/standardText"/>
    <View
        android:id="@id/div4"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:layout_alignStart="@id/games_behind"/>
    <TextView
        android:id="@+id/games_behind"
        android:layout_width="40dp"
        android:text="@string/gb_ex"
        android:layout_alignParentEnd="true"
        style="@style/standardText"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/team"
        android:background="@color/dark_blue"/>
</RelativeLayout>