<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/logo_home"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tricode_home"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/tricode_ex"
        android:layout_toEndOf="@id/logo_home"/>
    <ImageView
        android:id="@+id/logo_guest"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tricode_guest"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/tricode_ex"
        android:layout_toStartOf="@id/logo_guest"/>
    <TextView
        android:id="@+id/game_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_ex"
        android:layout_toEndOf="@id/tricode_home"
        android:layout_toStartOf="@id/tricode_guest"
        />
    <TextView
        android:id="@+id/game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_ex"
        android:layout_below="@id/game_date"
        android:layout_toEndOf="@id/tricode_home"
        android:layout_toStartOf="@id/tricode_guest"
        />

</RelativeLayout>